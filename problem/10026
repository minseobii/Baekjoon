#include <iostream>

using namespace std;

int N;

char arr[101][101];

int ans;
int ans_blind;

int search(int i, int j, char k) {
    cin >> N;
    if (arr[i][j]) {
        if (arr[i][j]==k) {
            //cout << arr[i][j];
            if (i+1<N) {
                search(i+1,j,k);
            }
            if (j+i<N) {
                search(i,j+1,k);
            }
            if (i > 0) {
                search(i-1,j,k);
            }
            if (j > 0) {
                search(i,j-1,k);
            }
            arr[i][j] = 0;
            return 1;
        }
    }
    return 0;
}

int main(void)
{
    for (int i=0;i<N;i++) {
       for (int j=0;j<N;j++) {
        char color;
        cin >> color;
        arr[i][j] = color;
       }
    } 

    for (int i=0;i<N;i++) {
        for (int j=0;j<N;j++) {
        if (arr[i][j]) {
            if (search(i,j,arr[i][j])) {
                ans++;
            }
        }
        }
    }   

    for (int i=0;i<N;i++) {
       for (int j=0;j<N;j++) {
        if (arr[i][j] == 'G') {
            arr[i][j] = 'R';
        }
       }
    } 

    for (int i=0;i<N;i++) {
        for (int j=0;j<N;j++) {
        if (arr[i][j]) {
            if (search(i,j,arr[i][j])) {
                ans_blind++;
            }
        }
        }
    }  

    cout << ans << ' ' << ans_blind;
}
